- var users = ['master', 'user']
- var buttons = ['Reset timer', 'Finish']


.users-container
    .members
        .users-header Waiting for user to vote
        .users-remained Remains:
            .timer
                img(src="images/timer.png" height="25")
                b 04:24:24
        for i in users
            .user-in-room
                .user-name=i
                .user-avatar
                    img(src="images/user.png", height=25)
                if i == 'master'
                    img(src="images/verified.png", height=20)
        .users-buttons
            for j in buttons
                .white-button=j
    .invite-box
        h3.text-center Invite new member
        p.text-center Copy room url to clipboard and sent it to new member
        .blue-button Copy url
